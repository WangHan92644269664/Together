<?xml version='1.0' encoding='utf-8'?>
<widget id="{APP_ID}" version="{APP_VERSION}" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>{APP_NAME}</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="CodePushDeploymentKey" value="{UPDATE_KEY_ANDROID}" />
        <preference name="CodePushServerUrl" value="{HTTP_SCHEMA}://{UPDATE_DOMAIN}" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <preference name="CodePushDeploymentKey" value="{UPDATE_KEY_IOS}" />
        <preference name="CodePushServerUrl" value="{HTTP_SCHEMA}://{UPDATE_DOMAIN}" />
        <preference name="SplashScreenDelay" value="3000" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>